{% extends 'base.html.twig' %}

{% block title %}Répertoire{% endblock %}

{% block body %}
    <h1>Répertoire</h1>
    <table class="table">
        <thead>
            <tr><th>{{ knp_pagination_sortable(operations, 'ID', 'r.id') }}</th>
                <th>{{ knp_pagination_sortable(operations, 'Statut', 'r.statut') }}</th>
                <th>{{ knp_pagination_sortable(operations, 'Date prévisionnelle', 'r.dateForecast') }}</th>
                <th>Client</th>
                <th>Utilisateur</th>
                <th>Rôle</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for operation in operations %}
                <tr>
                    <td>{{ operation.id }}</td>
                    <td>{{ operation.statut }}</td>
                    <td>{{ operation.dateForecast ? operation.dateForecast.format('d-m-Y') : 'N/A' }}</td>
                    <td>{{ operation.client.name }}</td> {# Affiche le nom du client associé à cette opération #}
                    <td>{{ operation.user.name }}</td> {# Affiche le nom de l'utilisateur associé à cette opération #}
                    <td>{{ operation.user.roles[0] }}</td> {# Affiche le nom de l'utilisateur associé à cette opération #}
                    <td>{{ operation.description }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{knp_pagination_render(operations) }}
{% endblock %}
