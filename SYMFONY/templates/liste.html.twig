{% set titre = "Liste de vos taches en cours" %}
{% include 'base/blueBar.html.twig' %}

<html lang="en">
    <div class="table-containerL">
        <table class="tableL">
            <thead>
                <tr>
                    <th class="clientL">Client</th>
                    <th class="typeOperationL">Type d'opération</th>
                    <th class="prioriteL">Priorité</th>
                    <th class="statutL">Statut</th>
                </tr>
            </thead>
            <tbody>
                {% for operation in operationsEnCours %}
                <tr>
                    <td>{{ operation.client }}</td>
                    <td>{{ operation.type }}</td>
                    <td>{{ operation.priorite }}</td>
                    <td>{{ operation.statut }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% set titre = "Liste de vos taches terminées" %}
    {% include 'base/blueBar.html.twig' %}

    <div class="table-containerL">
        <table class="tableL">
            <thead>
                <tr>
                    <th class="clientL">Client</th>
                    <th class="typeOperationL">Type d'opération</th>
                    <th class="prioriteL">Priorité</th>
                    <th class="statutL">Statut</th>
                </tr>
            </thead>
<tbody>
    {% for operation in operationsEnCours %}
    <tr>
        <td>{{ operation.description }}</td>
        <td>{{ operation.statut }}</td>
        <td>{{ operation.dateForecast|date('Y-m-d') }}</td>
        <!-- Affichez d'autres propriétés si nécessaire -->
    </tr>
    {% endfor %}
</tbody>
        </table>
