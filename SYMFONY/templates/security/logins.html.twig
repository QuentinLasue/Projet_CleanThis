{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<div class="navbarCo">
			<i class="fas fa-envelopeCo"></i>
		</div>

		<div class="contentCo">
			<div class="form-containerCo">
				<h1 id="h1Co">Se Connecter</h1>
				<form method="post">
					<div class="input-with-dividerCo">
						<div class="input-iconCo">
							<i class="fas fa-envelopeCo"></i>
							<input type="email" name="email" id="inputEmailCo" placeholder="Nom d’utilisateur ou adresse mail" required autofocus>
						</div>
						<div class="dividerCo"></div>
					</div>
					<br>
					<div class="input-with-dividerCo">
						<div class="input-iconCo">
							<i class="fas fa-lockCo"></i>
							<input type="password" name="password" id="inputPasswordCo" placeholder="Mot de passe" required>
						</div>
						<div class="dividerCo"></div>
					</div>
					<br>
					<div class="flex-containerCo">
						<div class="remember-meCo">
							<input type="checkbox" id="rememberMeCo">
							<label for="rememberMeCo">Se souvenir de moi</label>
						</div>
						<div style="width: 160px;"></div>
						<div class="forgot-passwordCo">
							<a href="#">Mot de passe oublié?</a>
						</div>
					</div>
					<br>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button type="submit" id="loginButton">Connexion</button>
				</form>
				<p class="connect-withCo">Ou connectez-vous avec</p>
				<div>
					<button type="submit" class="gsi-material-button" style="min-width: 200px; max-width: 300px;">
						<div class="gsi-material-button-state"></div>
						<div class="gsi-material-button-content-wrapper" style="display: flex;">
							<div class="gsi-material-button-icon">
								<svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
									<path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
									<path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
									<path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
									<path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
									<path fill="none" d="M0 0h48v48H0z"></path>
								</svg>
							</div>
							<span class="gsi-material-button-contents" style="overflow: hidden;">Continue with Google</span>
							<span style="display: none;">Continue with Google</span>
						</div>
					</button>

				</div>
			</div>
		</div>
	</form>
{% endblock %}
