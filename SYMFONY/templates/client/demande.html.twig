{% extends "base.html.twig" %}
{% block title %}Demande d'opération
{% endblock %}
{% block body %}

	{% set titre = "Demande d'opération de nettoyage" %}
	{% include "base/blueBar.html.twig" %}
	{% include "base/flash.html.twig" %}

	<div class="formClient">
		<a href="{{path('client')}}" class="btnBack btn">Retour</a>
		{{form_start(form)}}
		<div>
			<div class="doubleChamp">
				{{ form_row(form.client.name)}}
				{{ form_errors(form.client.name)}}

				{{ form_row(form.client.firstname)}}

			</div>
			{{ form_row(form.client.mail)}}
		</div>

		<div>
			<p class="titleForm">Adesse :
			</p>
			<div class="doubleChamp">
				{{ form_row(form.adresse.number)}}
				{{ form_row(form.adresse.street)}}
			</div>
			<div class="doubleChamp">
				{{ form_row(form.adresse.city)}}
				{{ form_row(form.adresse.county)}}
			</div>
			{{ form_row(form.adresse.country)}}
		</div>
		<div>
			<p class="titleForm">
				Votre demande :</p>
			{{ form_row(form.operation.type)}}
			{{ form_row(form.operation.dateForecast)}}
			{{ form_row(form.operation.description)}}
		</div>

		 {{form_end(form)}}
	</div> 
{% endblock %}
